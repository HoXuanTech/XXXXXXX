<body>
  <h1>你能多快斬鬼？</h1>
  <div id="status">準備好了嗎？</div>
  <div id="character"></div>
  <button onclick="attack()">斬！</button>
  <div id="effect"></div>

  <!-- 🎵 音效 -->
  <audio id="fireSound" src="fire.mp3"></audio>
  <audio id="waterSound" src="water.mp3"></audio>
  <audio id="lightningSound" src="lightning.mp3"></audio>
  <audio id="explosionSound" src="explosion.mp3"></audio>
  <audio id="muzanSound" src="muzan.mp3"></audio>

  <script>
    let character = document.getElementById("character");
    let status = document.getElementById("status");
    let effect = document.getElementById("effect");

    // 圖片清單
    const characters = [
      "human1.png", "human2.png", "human3.png",
      "oni1.png", "oni2.png", "oni3.png",
      "muzan1.png", "muzan2.png"
    ];

    let currentChar = null;

    // 顯示角色
    function showCharacter() {
      let choice = characters[Math.floor(Math.random() * characters.length)];
      currentChar = choice;
      character.style.backgroundImage = `url(${choice})`;
      status.textContent = "準備！";
    }

    // 呼吸法特效
    function playBreathEffect(type, soundId) {
      effect.className = '';
      effect.innerHTML = '';
      const div = document.createElement('div');
      div.classList.add(type);
      effect.appendChild(div);

      // 播放音效
      let audio = document.getElementById(soundId);
      audio.currentTime = 0;
      audio.play();

      setTimeout(() => { effect.innerHTML = ''; }, 1000);
    }

    function randomBreath() {
      const effects = [
        {type: 'fire', sound: 'fireSound'},
        {type: 'water', sound: 'waterSound'},
        {type: 'lightning', sound: 'lightningSound'}
      ];
      const choice = effects[Math.floor(Math.random() * effects.length)];
      playBreathEffect(choice.type, choice.sound);
    }

    function playExplosion() {
      playBreathEffect('explosion', 'explosionSound');
    }

    // 斬擊
    function attack() {
      if (!currentChar) return;
      if (currentChar.includes("oni")) {
        status.textContent = "斬中鬼！";
        randomBreath();
      } else if (currentChar.includes("muzan")) {
        status.textContent = "你擊中無慘！爆裂！！";
        playExplosion();
      } else {
        status.textContent = "犯規！你斬了人類！";
        character.style.backgroundImage = "url('demon.png')";
        let muzan = document.getElementById("muzanSound");
        muzan.currentTime = 0;
        muzan.play();
      }
      setTimeout(showCharacter, 1500);
    }

    // 開始遊戲
    showCharacter();
  </script>
</body>
</html>
